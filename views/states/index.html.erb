<h1>Listing states</h1>

<table>
  <thead>
    <tr>
      <th>Country</th>
      <th>State name</th>
      <th>State 3 code</th>
      <th>State 2 code</th>
      <th>Published</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.country_id %></td>
        <td><%= state.state_name %></td>
        <td><%= state.state_3_code %></td>
        <td><%= state.state_2_code %></td>
        <td><%= state.published %></td>
        <td><%= link_to 'Show', state %></td>
        <td><%= link_to 'Edit', edit_state_path(state) %></td>
        <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

